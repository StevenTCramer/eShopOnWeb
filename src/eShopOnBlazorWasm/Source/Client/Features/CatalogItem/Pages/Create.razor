@namespace eShopOnBlazorWasm.Features.CatalogItems.Pages
@using eShopOnBlazorWasm.Features.Bases
@inherits BaseComponent
@page "/Catalog/Create"

<h1>New Catalog Item</h1>
<h4>Catalog Item</h4>
<hr />

<div>
  <EditForm Model=@CreateCatalogItemRequest OnValidSubmit=@HandleValidSubmit>
    <Validate />
    <ValidationSummary />
    <div class="form-group">
      <label for="Name">Name</label>
      <InputText @bind-Value=CreateCatalogItemRequest.Name class="form-control" id="Name" />
    </div>
    <div class="form-group">
      <label for="Description">Description</label>
      <InputText @bind-Value=CreateCatalogItemRequest.Description class="form-control" id="Description" />
    </div>
    <div class="form-group">
      <label for="Brand">Brand</label>
      <InputSelectNumber @bind-Value=CreateCatalogItemRequest.CatalogBrandId class="form-control" id="Brand">
        @foreach (CatalogBrandDto catalogBrand in CatalogBrands)
{
<option value="@catalogBrand.Id">@catalogBrand.Brand</option>
}
      </InputSelectNumber>
    </div>
    <div class="form-group">
      <label for="Type">Type</label>
      <InputSelectNumber @bind-Value=CreateCatalogItemRequest.CatalogTypeId class="form-control" id="Type">
        @foreach (CatalogTypeDto catalogType in CatalogTypes)
{
<option value="@catalogType.Id">@catalogType.Type</option>
}
      </InputSelectNumber>
    </div>
    <div class="form-group">
      <label for="Price">Price</label>
      <InputNumber @bind-Value=CreateCatalogItemRequest.Price class="form-control" id="Price" />
    </div>
    <input type="submit" class="btn btn-primary" value="Save" />
    <button class="btn btn-primary" @onclick=@CancelClick>Cancel</button>
  </EditForm>

</div>

